{
  "compilerOptions": {
    "outDir": "dist",
    "module": "ESNext",
    "target": "ES5",
    "declaration": true,
    "jsx": "react",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": false,
    "sourceMap": true,
    "newLine": "lf",
    "typeRoots": ["src/@types", "node_modules/@types"]
  },
  "include": ["src"],
  "exclude": [
    "src/**/*.test.tsx",
    "src/index.tsx",
    "src/ShowComponents.tsx",
    "src/serviceWorker.ts",
    "src/setupTests.ts"
  ]
}
