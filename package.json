{
  "name": "@xinleibird/bird-ui",
  "version": "0.2.7",
  "files": [
    "dist/**/*"
  ],
  "main": "dist/main.js",
  "module": "dist/main.js",
  "types": "dist/main.d.ts",
  "author": {
    "name": "xltiger",
    "email": "xinleibird@gmail.com"
  },
  "license": "MIT",
  "homepage": "https://xinleibird.github.io/bird-ui/",
  "repository": "https://github.com/xinleibird/bird-ui",
  "keywords": [
    "react ui library",
    "ui design"
  ],
  "dependencies": {
    "classnames": "^2.2.6",
    "react-inlinesvg": "^1.2.0",
    "react-redux": "^7.2.0",
    "react-transition-group": "^4.4.1",
    "redux": "^4.0.5"
  },
  "peerDependencies": {
    "react": ">=16.13.1",
    "react-dom": ">=16.13.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "clean": "rimraf dist",
    "lint:fix": "eslint --ext ts,tsx --fix src",
    "lint:format": "prettier --write src/**/*.ts?(x)",
    "test:nowatch": "cross-env CI=true react-scripts test",
    "build": "npm run build:dist",
    "build:js": "tsc -p tsconfig.build.json",
    "build:css": "node-sass -r src -o dist --source-map=true --output-style=compressed --linefeed=lf",
    "build:asset": "ncp src/components/Icon/icons/assets/ dist/components/Icon/icons/assets/",
    "build:site": "react-scripts build",
    "build:dist": "npm run clean && npm run build:js && npm run build:css && npm run build:asset"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/classnames": "^2.2.10",
    "@types/jest": "^24.0.0",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@types/react-redux": "^7.1.9",
    "@types/react-transition-group": "^4.4.0",
    "@types/redux": "^3.6.0",
    "cross-env": "^7.0.2",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.7",
    "ncp": "^2.0.0",
    "node-sass": "^4.14.1",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.1",
    "rimraf": "^3.0.2",
    "typescript": "~3.7.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts?(x)": [
      "eslint --fix",
      "cross-env CI=true react-scripts test --passWithNoTests"
    ],
    "src/**/*.{ts,tsx,scss,md}": [
      "prettier --write"
    ],
    "src/**/*.{ts,tsx,scss}": [
      "npm run build"
    ]
  }
}
